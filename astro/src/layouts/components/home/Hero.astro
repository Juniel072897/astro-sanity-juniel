---
import { getLangFromUrl, slugSelector } from "@/lib/utils/languageParser";
import { markdownify } from "@/lib/utils/textConverter";


type Props = {
  hero: {
    heroTitle?: string;
    heroBody: string;
    heroCtaLabel?: string;
    heroCtaLink?: string;

  };
};

const { hero } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---
 
<div class="relative overflow-hidden">
  <section class="section">
    <div class="container grid grid-cols-1 xl:grid-cols-2 gap-10 items-center">
      
    
      <div class="max-w-xl mx-auto xl:mx-0 text-center xl:text-left" data-aos="fade-up-sm">
       

        <h1 class="mb-6 text-4xl md:text-5xl font-bold leading-tight">
          <span class="block">Turn Every Call</span>
          <span class="block text-orange">Into Data.</span>
          <span class="block">Every Lead</span>
          <span class="block text-orange">Into Gold.</span>
        </h1>

        <p
          set:html={markdownify(hero.heroBody ?? "")}
          class="mb-6 text-base text-muted"
        />

   {hero.heroCtaLabel && hero.heroCtaLink && (
  <a
    href={hero.heroCtaLink}
    class="relative inline-block px-6 py-3 text-white font-semibold uppercase rounded-full
           bg-orange-500 shadow-[6px_6px_0px_#2d2d2d] hover:translate-x-[1px] hover:translate-y-[1px]
           transition-transform duration-150"
  >
    {hero.heroCtaLabel}
  </a>
)}

      </div>

  <div class="relative w-full  min-h-[500px] flex items-center overflow-visible">
   
     <div class="absolute inset-0 w-screen bg-gradient-to-tr from-[#1a1a1a] via-[#f26a06] to-[#1a1a1a] rounded-l-[3rem]"></div>


    <!-- Dashboard + mascot stack -->
    <div class="relative z-10 w-full max-w-6xl mx-auto px-4 py-12">
    
      <img
          src="/images/HMSTR-Dashboard.png"        alt="Dashboard"
        class="w-full rounded-[2rem] shadow-xl"
      />

      <!-- Mascot at bottom-right -->
      <img
        src="/images/Hmster.png"
        alt="Mascot"
        class="absolute bottom-0 right-12 w-[250px] md:w-[300px]
               translate-y-1/2 drop-shadow-2xl"
      />
    </div>
  </div>

  </section>

  




</div>
